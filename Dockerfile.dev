FROM node:18-alpine

# Install dependencies needed for development
RUN apk add --no-cache libc6-compat openssl curl git

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies, suppress warnings)
RUN npm install --silent 2>/dev/null || npm install

# Create data directory
RUN mkdir -p /app/data

# Copy source code
COPY . .

EXPOSE 3000

ENV PORT 3000
ENV HOSTNAME "0.0.0.0"

CMD ["npm", "run", "dev"]